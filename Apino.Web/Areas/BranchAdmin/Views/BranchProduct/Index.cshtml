@{
    ViewData["Title"] = "مدیریت محصولات";
}

<div class="container-fluid px-0">
    <!-- هدر و دکمه افزودن -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">مدیریت محصولات</h4>
            <span class="text-muted small">لیست و مدیریت محصولات، قیمت‌ها و موجودی</span>
        </div>
        <button class="btn btn-primary shadow-sm" id="btn-add">
            <i class="fa fa-plus ms-1"></i> محصول جدید
        </button>
    </div>

    <!-- بخش فیلترها -->
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body bg-light rounded-3">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold">فیلتر بر اساس دسته‌بندی</label>
                    <select class="form-select border-0 shadow-sm" id="filter-category">
                        <option value="">همه دسته‌بندی‌ها</option>
                        <!-- توسط JS پر می‌شود -->
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold">فیلتر بر اساس نوع خدمت</label>
                    <select class="form-select border-0 shadow-sm" id="filter-serviceType">
                        <option value="">همه خدمات</option>
                        <!-- توسط JS پر می‌شود -->
                    </select>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted fst-italic">نتایج به صورت خودکار با تغییر فیلترها بروز می‌شوند.</small>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول محصولات -->
    <div class="card shadow border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="tblProducts">
                    <thead class="bg-light">
                        <tr class="text-muted small text-uppercase">
                            <th scope="col" class="ps-4 py-3" style="width: 80px;">تصویر</th>
                            <th scope="col" class="py-3">عنوان محصول</th>
                            <th scope="col" class="py-3 d-none d-md-table-cell">دسته‌بندی</th>
                            <th scope="col" class="py-3 d-none d-lg-table-cell">نوع خدمت</th>
                            <th scope="col" class="py-3" style="width: 150px;">قیمت / موجودی</th>
                            <th scope="col" class="py-3 text-center" style="width: 100px;">وضعیت</th>
                            <th scope="col" class="py-3 text-end pe-4" style="width: 120px;">عملیات</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        <!-- توسط AJAX پر می‌شود -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <div class="card-footer bg-white border-top-0 py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0" id="pagination-container">
                    <!-- دکمه‌های صفحه بندی توسط JS ساخته می‌شوند -->
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Modal افزودن/ویرایش محصول -->
<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold" id="modalTitle">افزودن محصول جدید</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-4">
                <form id="frmProduct">
                    <input type="hidden" id="p-id" value="0">

                    <div class="row g-4">
                        <!-- ستون تصویر -->
                        <div class="col-md-4 text-center">
                            <div class="position-relative d-inline-block">
                                <img id="p-img-preview" src="/images/placeholder.png"
                                     class="rounded-3 shadow-sm border object-fit-cover"
                                     style="width: 180px; height: 180px;" alt="Product Image">

                                <label for="p-image" class="btn btn-sm btn-light position-absolute bottom-0 end-0 mb-2 me-2 shadow-sm border" title="تغییر تصویر">
                                    <i class="fa fa-camera"></i>
                                </label>
                            </div>
                            <input type="file" id="p-image" class="d-none" accept="image/*">
                            <div class="small text-muted mt-2">فرمت‌های مجاز: JPG, PNG</div>
                        </div>

                        <!-- ستون فیلدها -->
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">عنوان محصول <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="p-title" placeholder="مثلا: اسپرسو تک شات">
                            </div>

                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">دسته‌بندی <span class="text-danger">*</span></label>
                                    <select class="form-select" id="p-category">
                                        <option value="">انتخاب کنید...</option>
                                        <!-- پر شده توسط JS -->
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">نوع خدمت <span class="text-danger">*</span></label>
                                    <select class="form-select" id="p-serviceType">
                                        <option value="">انتخاب کنید...</option>
                                        <!-- پر شده توسط JS -->
                                    </select>
                                </div>
                            </div>

                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">قیمت (تومان) <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" id="p-price" min="0">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">موجودی <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" id="p-stock" min="0" value="100">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">توضیحات</label>
                                <textarea class="form-control" id="p-description" rows="2"></textarea>
                            </div>

                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="p-isActive" checked>
                                <label class="form-check-label" for="p-isActive">محصول فعال باشد</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-primary px-4" id="btn-save">
                    <i class="fa fa-save ms-1"></i> ذخیره تغییرات
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- فایل جاوااسکریپت اختصاصی صفحه -->
    <script src="~/js/branchAdmin/branch-products.js"></script>

    <script>
        // پیش‌نمایش تصویر قبل از آپلود
        document.getElementById('p-image').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('p-img-preview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
