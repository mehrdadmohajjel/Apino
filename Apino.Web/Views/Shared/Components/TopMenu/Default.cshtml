@model TopMenuViewModel
@using System.Linq
@using Apino.Application.Dtos

<ul class="navbar-nav">
    <li class="nav-item">
        <a href="/Home" class="nav-link">خانه</a>
    </li>

    <li class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
            لیست شعب <i class="fas fa-chevron-down"></i>
        </a>
        <ul class="dropdown-menu">
            @foreach (var branch in Model.Branches)
            {
                <li class="nav-item">
                    <a href="javascript:void(0)" class="nav-link branch-link" data-id="@branch.Id">@branch.Title</a>
                </li>
            }
        </ul>
    </li>

    <li class="nav-item"><a href="#" class="nav-link">وبلاگ</a></li>
    <li class="nav-item"><a href="about" class="nav-link">درباره ما</a></li>
    <li class="nav-item"><a href="contact" class="nav-link">تماس با ما</a></li>

    <!-- اینجا بخش کاربر که با JS رندر می‌شود -->
    <li class="navbar-nav user-menu"  id="user-menu">
       @*  <a href="javascript:void(0)" class="nav-link" id="login-btn">ورود / عضویت</a> *@
    </li>
</ul>

<!-- بخش ثابت سبد خرید و دیگر امکانات -->
<div class="others-options d-flex align-items-center gap-3">

    <!-- 🔔 Notification -->
    <div class="dropdown">
        <a href="javascript:void(0)"
           class="nav-link position-relative notification-btn"
           data-bs-toggle="dropdown">

            <i class="flaticon-bell notification-icon"></i>

            <span id="notif-count"
                  class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                  style="font-size:11px; display:none;">
                0
            </span>
        </a>

        <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
            <!-- آیتم‌ها با JS پر میشن -->
            <li class="text-center text-muted p-2">در حال بارگذاری...</li>
        </ul>
    </div>

    <!-- 🛒 Cart -->
    <a href="javascript:void(0)"
       id="cart-link"
       class="cart-btn position-relative">

        <i class="flaticon-shopping-basket"></i>

        <span id="cart-count"
              class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
              style="font-size:11px; display:none;">
            0
        </span>
    </a>

</div>
