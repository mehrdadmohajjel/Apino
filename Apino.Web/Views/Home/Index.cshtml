@{
    Layout = "_Layout";
}
@using Apino.Application.Dtos

@model List<BranchViewModel>
<div class="row">
    @if (Model is List<BranchViewModel> branches)
    {
        foreach (var branch in branches)
        {
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="single-featured-services-box branch-link" data-id="@branch.Id" style="cursor:pointer;">
                    <div class="icon">
                        <img src="/images/branch/@branch.ImageUrl" alt="@branch.Title" class="img-fluid" />
                    </div>
                    <h3>@branch.Title</h3>
                    <p>@branch.Description</p>
                </div>
            </div>
        }
    }
</div>


<!-- Branch Products Area -->
<section id="branch-products" class="featured-services-area ptb-110" style="display:none;">
    <div class="container">
        <div class="section-title">
            <h2 id="branch-products-title">خدمات ارائه شده در شعبه انتخاب شده</h2>
        </div>
        <div class="row">
            <!-- دسته‌بندی‌ها و محصولات توسط jQuery اضافه می‌شوند -->
        </div>
    </div>
</section>