<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>عنوان</th>
            <th>متن</th>
            <th>تاریخ</th>
            <th>وضعیت</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model.Items)
        {
            <tr class="@(n.IsRead ? "" : "table-warning")">
                <td>@n.Title</td>
                <td>@n.Message</td>
                <td>@n.PersianDate</td>
                <td>
                    @if (n.IsRead)
                    {
                        <span class="badge bg-success">خوانده شده</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">نخوانده</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@* Pager *@
<nav class="mt-3">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : "")">
                <a href="javascript:void(0)"
                   class="page-link notification-page"
                   data-page="@i">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
